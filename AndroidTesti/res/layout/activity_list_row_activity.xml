<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListRowActivity" >

    <Button
        android:id="@+id/listRowActivity_nappi_animaatio2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="animaatioKaksi"
        android:text="Animaatio 2" />

    <Button
        android:id="@+id/listRowActivity_nappi_animaatio1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listRowActivity_nappi_animaatio2"
        android:layout_alignLeft="@+id/listRowActivity_nappi_animaatio2"
        android:onClick="animaatioYksi"
        android:text="Animaatio 1" />

    <LinearLayout
        android:id="@+id/listRowActivity_riviLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listRowActivity_nappi_animaatio1" >

        <ImageView
            android:id="@+id/listRowActivity_kuvaKentta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/listRowActivity_tekstiKentta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_row_activity_numero"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</RelativeLayout>